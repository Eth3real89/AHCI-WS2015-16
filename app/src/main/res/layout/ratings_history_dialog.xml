<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <TextView
        android:id="@+id/ratings_history_explanation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="7pt"
        android:padding="10dp"
        android:layout_marginBottom="5dp"
        android:text="@string/history_explanation"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ratings_history_selected"
        android:layout_below="@id/ratings_history_explanation"
        android:padding="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ratings_history_selected_title"
            android:layout_alignParentTop="true" />

        <!-- just for layout -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/ratings_history_selected_center"/>

        <ImageView
            android:id="@+id/ratings_history_selected_happy"
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/ratings_history_selected_center"
            android:layout_below="@id/ratings_history_selected_title"

            android:src="@drawable/emoticon_smiling_big"
            />

        <ImageView
            android:id="@+id/ratings_history_selected_neutral"
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/ratings_history_selected_center"
            android:layout_below="@id/ratings_history_selected_title"
            android:src="@drawable/emoticon_neutral_big"
            />

    </RelativeLayout>


    <ListView
        android:id="@+id/ratings_history_dialog_item_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/ratings_history_selected"
        ></ListView>

</RelativeLayout>